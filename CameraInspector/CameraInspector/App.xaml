<Application x:Class="CameraInspector.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"             
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/BlueTheme.xaml" />             
            </ResourceDictionary.MergedDictionaries>
            <sys:String x:Key="AppNameLong">Digital Rockhound's Companion</sys:String>
            <sys:String x:Key="AppNameShort">DRC</sys:String>
            <sys:String x:Key="AppVersion">4.11</sys:String>
        </ResourceDictionary>
    </Application.Resources>
</Application>
